<UserControl x:Class="WpfCurrencyMidterm.Views.UserControlMakeChangeTest"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCurrencyMidterm.Views"
             mc:Ignorable="d" 
             DataContext="MakeChangeViewModel"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label>Amount:</Label>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBox Text="0.0"></TextBox>
                <Button >Make Change</Button>
                <!-- this listview working?? -->
                <ListView x:Name="OCoins" ItemsSource="{Binding Coins, StringFormat='Test'}" Width="50" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button >Save</Button>
            </StackPanel>
        </StackPanel>

    </Grid>
</UserControl>
